proxy_cache_path {{ application_cache_dir }} levels=1:2 keys_zone=static_assets:10m max_size=250M;

#
# Redirect all non-encrypted to encrypted
#
server {
    server_name          {{ nginx_server_name }};
    listen               80;
    listen               [::]:80;
    if ($host = web4u4less.com){
      return 301 https://$host$request_uri;
    }
    return 404;
}
